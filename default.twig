<html class="no-js" lang="{{ page.seoLang }}">
<!--<![endif]-->
<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />
	<meta http-equiv="content-language" content="{{ page.seoLang }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }}">

	<!-- Container -->
	<div class="container">
	
		<!-- Header Content (Template Widgets) -->
		<header class="header">
			{{widget('logo', 'headerlogo', {"defaultlogo": asset('images/logo.png')})|raw}}
			{{widget('extendednavigation', 'headernavigation', {"align":"left"})|raw}}
			{{widget('feature', 'headerfeature', {"header": "Header Text", "strapline":"Strapline text", "buttonText":"Button text","defaultBgImg": asset('images/feature.jpg'), 'positionTopPercentage': '50','showBtn': true})|raw}}
		</header>
		<!-- End Header Content -->
		
		<!-- Page Content (Zone Widgets) -->
		<section class="main-zone">
			{{zone('main')|raw}}
		</section>
		<!-- End Page Content -->

	</div>
	<!-- End Container -->

{% include basekit.bodyScript %}
</body>
</html>
